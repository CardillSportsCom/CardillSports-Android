<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name_text_view"
        android:padding="16dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <Button
        android:text="2PT MADE"
        android:layout_width="@dimen/game_stat_button_size"
        android:layout_height="@dimen/game_stat_button_size" />

    <Button
        android:text="3PT MADE"
        android:layout_width="@dimen/game_stat_button_size"
        android:layout_height="@dimen/game_stat_button_size" />

    <Button
        android:text="FIELD GOAL ATTEMPTED"
        android:layout_width="@dimen/game_stat_button_size"
        android:layout_height="@dimen/game_stat_button_size" />

    <Button
        android:text="ASSISTS"
        android:layout_width="@dimen/game_stat_button_size"
        android:layout_height="@dimen/game_stat_button_size" />

    <Button
        android:text="STEALS"
        android:layout_width="@dimen/game_stat_button_size"
        android:layout_height="@dimen/game_stat_button_size" />

    <Button
        android:text="BLOCKS"
        android:layout_width="@dimen/game_stat_button_size"
        android:layout_height="@dimen/game_stat_button_size" />

    <Button
        android:text="REBOUNDS"
        android:layout_width="@dimen/game_stat_button_size"
        android:layout_height="@dimen/game_stat_button_size" />

    <Button
        android:text="TURNOVER"
        android:layout_width="@dimen/game_stat_button_size"
        android:layout_height="@dimen/game_stat_button_size" />

</LinearLayout>